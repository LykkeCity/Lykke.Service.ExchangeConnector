@model IEnumerable<Lykke.Logs.LogEntity>

@{
    ViewData["Title"] = "Logs";
}

<p>
    Exchange Connector Logs | 
    <a asp-controller="Logs" asp-action="AlphaEngine">Alpha Engine Logs</a> |
    <a asp-controller="Logs" asp-action="FIX">FIX</a> |
    <a asp-controller="Logs" asp-action="TranslatedSignals">Translated Signals</a> |
    <a asp-controller="Logs" asp-action="IntrinsicEvents">Intrinsic Events</a>
</p>

<table>
    @foreach (var item in Model)
    {
        <tr @(item.Level == "error" ? "bgcolor=pink" : "")>
            <td>@item.PartitionKey @item.RowKey</td>
            <td>@item.Level</td> 
            <td>@item.Msg</td>
        </tr>
    }
</table>